extends layout-nav

block content
	.container
		h2.text-center Login
		br
		form.form-horizontal(role='form', action="/auth/login", method="post")
			if (message && message.length)
				.alert.alert-danger(role='alert')
					span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
					span.sr-only Error:
					|  #{message}
			.form-group
				label.col-sm-2.control-label(for='name') Email
				.col-sm-10
					input.form-control(type='text', name="email", id="email", placeholder='Email')
			.form-group
				label.col-sm-2.control-label(for='password') Password
				.col-sm-10
					input.form-control(type='password', name="password", id="password", placeholder='Password')
			p.text-center
				button.btn.btn-primary.add-btn(type='submit') Login
				a(href='/')
					button.btn.btn-default.add-btn(type="button") Cancel